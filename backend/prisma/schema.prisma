datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  id        Int     @id @default(autoincrement())  
  concepto  String  @db.Text @unique
  monto     Float
  tipo      String   @default("ingreso") // <- valor por defecto
  fecha     DateTime @default(now())

  @@index([fecha])
}


